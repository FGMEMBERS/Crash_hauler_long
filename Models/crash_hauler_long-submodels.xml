<PropertyList>

 <submodel>
  <name>marker</name>
  <!-- model>Aircraft/Submarine_Scout/Models/65lb_bomb.ac</model -->
  <model>Models/Geometry/null.ac</model>
  <trigger>/tmp/foam-trigger</trigger>
  <speed>80</speed>
  <repeat>false</repeat>
  <count>-1</count>
  <x-offset> 14.76 </x-offset>
  <y-offset>  0.0  </y-offset>
  <z-offset> 11.15 </z-offset>
  <yaw-offset>0</yaw-offset>
  <pitch-offset>15</pitch-offset>
  <wind>false</wind>
  <eda>3.58</eda>
  <weight>10</weight>
  <cd>0.05</cd>
  <impact>true</impact>
  <impact-reports>/sim/ai/aircraft/impact/foam</impact-reports>
 </submodel>

  <!-- Drag Chute Jettison-->
  <submodel>
    <name>Braking Parachute</name>
    <model>Aircraft/DavePack/Stores/Chute/fullchute.ac</model>
    <trigger>controls/flight/chute_jettisoned</trigger>
    <speed>0</speed>
    <repeat>false</repeat>
    <count>1</count>
    <x-offset>-40</x-offset>
    <y-offset>1</y-offset>
    <z-offset>1</z-offset>
    <yaw-offset>0</yaw-offset>
    <pitch-offset>-10</pitch-offset>
    <buoyancy>25</buoyancy>
    <wind>true</wind>
    <life>4.0</life> 
    <eda>250</eda>
    <weight>50</weight>
    <aero-stabilised>false</aero-stabilised>
  </submodel>

  <submodel>
    <name>Braking Parachute</name>
    <model>Aircraft/DavePack/Stores/Chute/fullchute.ac</model>
    <trigger>controls/flight/chute_jettisoned</trigger>
    <speed>0</speed>
    <repeat>false</repeat>
    <count>1</count>
    <x-offset>-40</x-offset>
    <y-offset>-1</y-offset>
    <z-offset>1</z-offset>
    <yaw-offset>0</yaw-offset>
    <pitch-offset>-10</pitch-offset>
    <buoyancy>25</buoyancy>
    <wind>true</wind>
    <life>4.0</life> 
    <eda>250</eda>
    <weight>50</weight>
    <aero-stabilised>false</aero-stabilised>
  </submodel>

</PropertyList>
